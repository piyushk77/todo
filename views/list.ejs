<%- include("header") -%>

    <div class="box" id="heading">
        <h1>
            <%=listHeading%>
        </h1>
    </div>

    <div class="box">

        <%listItems.forEach(item=> {%>
            <form method="post" action="/delete">
                <div class="item">
                    <input type="checkbox" name="check" value="<%=item._id%>" onchange="this.form.submit()">
                    <p>
                        <%=item.name%>
                    </p>
                </div>
                <input type="hidden" name="checkList" value="<%= listHeading %>">
            </form>

            <%})%>

                <form class="item" method="post" action="/">
                    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                    <button type="submit" name="button" value=<%= buttonValue %> >+</button>
                </form>
    </div>

    <%- include("footer") -%>